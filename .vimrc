" vim runtiom configuration file
set enc=UTF-8
set fileencodings=UTF-8

set nocompatible
set backspace=indent,eol,start
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent
set history=15
set ruler
set nu
set hls

syntax on

" backups
set backupdir=~/.vim/backup/
set directory=~/.vim/swap/
set undodir=~/.vim/undo/
